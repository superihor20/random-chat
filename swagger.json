{
  "openapi": "3.0.3",
  "info": { "title": "Chat App", "description": "Eto Chat", "version": "1.0.0" },
  "servers": [{ "url": "http://localhost:4200" }],
  "tags": [{ "name": "Auth" }],
  "paths": {
    "/auth/sign-up": {
      "post": {
        "tags": ["Auth"],
        "summary": "Create new user",
        "description": "Create new user",
        "operationId": "createUser",
        "requestBody": {
          "description": "Create new user in the app",
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/AuthBody" } },
            "application/xml": { "schema": { "$ref": "#/components/schemas/AuthBody" } },
            "application/x-www-form-urlencoded": {
              "schema": { "$ref": "#/components/schemas/AuthBody" }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "User created successfully",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/AuthBody" } }
            }
          },
          "403": { "description": "Incorect Data" },
          "422": { "description": "User already Exist" }
        }
      }
    },
    "/auth/sign-in": {
      "get": {
        "tags": ["Auth"],
        "summary": "Sign in to the app",
        "description": "Sign in to the app",
        "operationId": "signIn",
        "requestBody": {
          "description": "Sign in to the app",
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/AuthBody" } },
            "application/xml": { "schema": { "$ref": "#/components/schemas/AuthBody" } },
            "application/x-www-form-urlencoded": {
              "schema": { "$ref": "#/components/schemas/AuthBody" }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "User signed in successfully",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/AuthBody" } }
            }
          },
          "403": { "description": "Incorect Data" },
          "404": { "description": "User not Found" }
        }
      }
    },
    "/auth/refresh": {
      "post": {
        "tags": ["Auth"],
        "summary": "Refresh access token with refresh token",
        "description": "Refresh access token with refresh token",
        "operationId": "refresh",
        "requestBody": {
          "description": "Refresh access token with refresh token",
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/RefreshBody" } },
            "application/xml": { "schema": { "$ref": "#/components/schemas/RefreshBody" } },
            "application/x-www-form-urlencoded": {
              "schema": { "$ref": "#/components/schemas/RefreshBody" }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "New pair of tokens successfully created",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/RefreshBody" } }
            }
          },
          "403": { "description": "Incorect Data" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AuthBody": {
        "type": "object",
        "properties": {
          "email": { "type": "string", "example": "email@gmail.com" },
          "password": { "minLength": 8, "type": "string", "example": "12345678" }
        }
      },
      "RefreshBody": {
        "type": "object",
        "properties": {
          "refreshToken": { "type": "string", "example": "your jwt token" }
        }
      }
    }
  }
}
